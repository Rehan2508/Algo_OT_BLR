<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Algo.App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/index.css" />
    <link rel="stylesheet" href="~/css/help.css" />
    <link rel="stylesheet" href="~/css/output.css" />
    <link rel="stylesheet" href="@Url.Content("/wwwroot/css/site.css")" />
    <link rel="stylesheet" href="@Url.Content("/wwwroot/css/index.css")" />
    <link rel="stylesheet" href="@Url.Content("/wwwroot/css/help.css")" />
    <link rel="stylesheet" href="@Url.Content("/wwwroot/css/output.css")" />

    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">

    <link rel="stylesheet" href="https://unpkg.com/boxicons@latest/css/boxicons.min.css">

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500;600&display=swap" rel="stylesheet">
</head>

<body>
    <header>
        <a asp-area="" asp-controller="Home" asp-action="Index" class="logo"><i class="ri-home-heart-fill"></i><span>Algo.App</span></a>

        <ul class="navbar">
            <li><a asp-area="" asp-controller="Home" asp-action="Index" class="active">Home</a></li>
            <li><a asp-area="" asp-controller="Home" asp-action="Privacy">Help</a></li>
        </ul>

        <div class="main">
            <a href="https://www.solera.com/" class="solera">Solera</a>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
